<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView android:id="@+id/card_view_prod"
    android:elevation="5dp"

    android:layout_margin="7dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/nombrecaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Nombre Caja"
            android:textColor="@color/black"
            android:textSize="18dp">

        </TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/borde2"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15dp">

        </TextView>


        <Button
            android:id="@+id/btn_cargarF1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/borde"
            android:drawablePadding="2dp"
            android:elevation="12dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="Cargar FASE 1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"


            />

        <Button
            android:id="@+id/btn_cargarF2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/borde"
            android:drawablePadding="2dp"
            android:elevation="12dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="Cargar FASE 2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"

            />

        <Button
            android:id="@+id/btn_completado"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/borde2"
            android:drawablePadding="2dp"
            android:elevation="12dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:visibility="gone"

            android:shadowRadius="5"
            android:text="Completada"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"


            />


    </LinearLayout>


</androidx.cardview.widget.CardView>




