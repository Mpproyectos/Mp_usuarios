<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        tools:context=".modoadmin.Productos.nuevoProducto">

        <include layout="@layout/toolbar"/>



        <TextView
            android:visibility="gone"
            android:text="cate"
            android:id="@+id/tv_cate_elegida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Nombre para el producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/et_nombre_producto"
            android:hint="escribe nombre del producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Seleccione una Categoria:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_margin="10dp"
                android:id="@+id/id_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Seleccione una SubCategoria:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_margin="10dp"
                android:id="@+id/id_spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <TextView
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Descripcion del producto:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <EditText
            android:maxLength="75"
            android:layout_margin="10dp"
            android:id="@+id/et_descripcion_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripcion del producto" />
        <com.wafflecopter.charcounttextview.CharCountTextView
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:id="@+id/tv_tvTextCounter"
            app:maxCharacters="75"
            app:exceededTextColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Precio del producto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText

            android:layout_margin="10dp"
            android:id="@+id/et_precio_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Precio del producto"
            android:inputType="numberDecimal" />



        <TextView
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Foto para el producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_select_foto"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Seleccione foto"
            android:textColor="#fff"
            android:background="@color/com_facebook_button_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_foto"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btn_subirproducto"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Subir Producto"
            android:textColor="#fff"
            android:background="@color/com_facebook_button_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
