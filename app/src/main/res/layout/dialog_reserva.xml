<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bgapps4"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="8dp"
        android:src="@drawable/ic_date_range_black_24dp" />
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText

            android:id="@+id/et_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:gravity="center"
            android:hint="Coloca tu telefono"

            android:inputType="number"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

    </LinearLayout>



    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <Button
           android:id="@+id/btn_damefecha"
           android:shadowColor="@color/black"
           android:shadowDx="2"
           android:shadowDy="2"
           android:shadowRadius="6"
           android:elevation="5dp"
           android:layout_margin="10dp"
           android:textColor="#fff"
           android:background="@drawable/bgbtnopcion"
           android:drawableLeft="@drawable/ic_date_range_black_24dp"
           android:textAllCaps="false"
           android:text="Seleccione Fecha"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"


            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_damehora"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:background="@drawable/bgbtnopcion"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:textAllCaps="false"
            android:text="Seleccione Hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginBottom="10dp"
            android:id="@+id/tv_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"


            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:layout_marginEnd="6dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Enviar Reserva"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>




</LinearLayout>