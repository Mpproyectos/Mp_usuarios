<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout

            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"

                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Nombre nodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/nombrenodo"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Val-145"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/tv_fecha"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="21/01/2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>









        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/img_finalizado"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icons8_ok_48"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_visto"
                android:layout_gravity="center"
                android:src="@drawable/visto_azul"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/img_new"
                android:src="@drawable/new_icon_post"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <Button
                android:layout_weight="1"
                android:id="@+id/btn_confirmar"

                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:text="Completado"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

            </Button>

            <ImageButton

                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/boton_redondo"
                android:id="@+id/btn_detalle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_flecha" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>









