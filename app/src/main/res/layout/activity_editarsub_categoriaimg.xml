<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        tools:context=".modoadmin.EditarCategoria.EditarCategoriaImgActivity">

        <include layout="@layout/toolbar"/>


        <TextView
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Foto para la Categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_select_foto"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Seleccione foto"
            android:textColor="#fff"
            android:background="@color/com_facebook_button_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_foto"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_subirproducto"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Actualizar foto"
            android:textColor="#fff"
            android:background="@color/com_facebook_button_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
