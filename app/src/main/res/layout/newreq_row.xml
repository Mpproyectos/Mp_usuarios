<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"

      android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView

                    android:layout_margin="10dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view_prod"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:background="#fff"


                        android:padding="10dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_npedido"
                            android:textSize="16dp"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:text="ped. NÂº 2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_nombre"
                            android:textSize="16dp"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:text="Nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_fecha_req"
                            android:textSize="16dp"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:text="11/02/19 !"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                           android:id="@+id/tv_hora_req"
                            android:textSize="16dp"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:text="12:42"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:id="@+id/img_new"
                            android:visibility="gone"
                            android:src="@drawable/new_icon_post"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <ImageView

                            android:id="@+id/img_send"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icons8_ok_48"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <ImageView
                            android:id="@+id/img_cancels"
                            android:visibility="gone"
                            android:src="@drawable/icon_cancel19"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <ImageView
                            android:id="@+id/img_visto"
                            android:visibility="gone"
                            android:src="@drawable/visto_azul"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <ImageView
                            android:id="@+id/img_reserva"
                            android:visibility="gone"
                            android:src="@drawable/re"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/img_msj_negro"
                            android:src="@drawable/ic_msj_black"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/img_msj_verde"
                            android:src="@drawable/ic_msj_verde"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        </LinearLayout>


                </androidx.cardview.widget.CardView>

        </LinearLayout>







