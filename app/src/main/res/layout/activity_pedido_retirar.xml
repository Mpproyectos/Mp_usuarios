<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".clientes.pedidoenviadoActivity">

    <ImageView
        android:id="@+id/locicon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="111dp"

        android:elevation="6dp"
        android:src="@drawable/tick"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/overbox"

        />


    <LinearLayout


        android:id="@+id/mykonten"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bgkonten"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/overbox">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nuevo pedido"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="40dp"
            android:lineSpacingExtra="4dp"
            android:text="Muchas gracias por enviar un pedido, En menu > Contacto - DirecciÃ³n y ubicacion para retirar el pedido. Disbos"
            android:textAlignment="center"
            android:textColor="#343434"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btncls"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cerrar2" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/overbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/overbox"
        android:elevation="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>