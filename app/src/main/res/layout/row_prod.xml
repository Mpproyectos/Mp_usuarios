<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView android:id="@+id/card_view_prod"
    android:elevation="5dp"

    android:layout_margin="7dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:weightSum="10">




            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="12dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/img_image"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_weight="4"

                android:src="@drawable/pizza" />


            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_margin="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ProgressBar>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/tv_nombre_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food name"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp"
                    android:textStyle="bold"



                    />

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo de preparaciÃ³n: Calentar el horno, sacar del freezer y hornear "
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:layout_weight="3"
                        android:id="@+id/number_button"
                        android:layout_width="0dp"

                        android:layout_height="40dp"
                        app:initialNumber="1"
                        app:finalNumber="20"
                        android:layout_margin="8dp"
                        app:backGroundColor="@color/colorAccent"
                        android:layout_gravity="center_vertical"


                         />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:id="@+id/tv_precio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/borde"
                        android:gravity="center"
                        android:text="$ "
                        android:textColor="#fff"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="5"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:id="@+id/btm_infomodocerrado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
                        android:text="Negocio en modo Cerrado"
                        android:textColor="@color/white" />
                    <Button
                        android:elevation="12dp"
                        android:textSize="16dp"
                        android:id="@+id/btn_agregaralcarrito"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:drawablePadding="2dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borde"
                        android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
                        android:text="Agregar al carrito"
                        android:textColor="@color/white"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="5"

                        />



                    <Button
                        android:textAllCaps="false"
                        android:id="@+id/btn_enstock"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:text="EN stock"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:textAllCaps="false"
                        android:id="@+id/btn_sinstock"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:text="Sin stock"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:id="@+id/btn_editar"
                        android:textColor="@color/white"
                        android:text="Editar"
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:id="@+id/btn_eliminar"
                        android:textColor="@color/white"
                        android:text="Eliminar"
                        android:background="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>




