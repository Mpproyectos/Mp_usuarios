<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Button
        android:visibility="gone"
        android:textAllCaps="false"

        android:id="@+id/btn_Notificaratodos"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo_rojo"
        android:layout_marginTop="10dp"
        android:text="Notificar a todos"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitStart" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_nombre_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food name"
                android:textColor="@color/colorAccent"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo de preparaciÃ³n: Calentar el horno, sacar del freezer y hornear "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button"

                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"

                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="6dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"

                    />
                <TextView

                    android:id="@+id/tv_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/borde"
                    android:gravity="center"
                    android:text="price"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:id="@+id/btm_infomodocerrado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_tono2"
                    android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
                    android:text="Negocio en modo Cerrado"
                    android:textColor="@color/white" />
                <Button
                    android:textSize="20dp"
                    android:visibility="gone"
                    android:id="@+id/btn_agregaralcarrito_promo"
                    android:layout_width="match_parent"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_tono2"
                    android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
                    android:text="Agregar al carrito"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"


                    />
                <Button
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:id="@+id/btn_eliminarpromo"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_rojo"

                    android:text="Eliminar promo"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>

